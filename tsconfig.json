{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "strict": true,
    "allowJs": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "types": [
      "prismjs",
      "node"
    ]
  },
  "exclude": [
    "*.vue",
    "examples"
  ]
}
